$(function(){
    $(document).ready(function() {
        $.ajax({
            url : "txt/1.txt",
            success: function(data){
                $("#text").html(data);
            }
        });
    });
    $("#button").click(function() {
        $.ajax({
            url : "txt/2.txt",
            success: function(data){
                $("#text").html(data);
            }
        });
    });
});
